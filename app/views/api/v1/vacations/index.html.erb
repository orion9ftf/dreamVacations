<p id="notice"><%= notice %></p>

<h1>Vacations</h1>

<%= render 'people/import_csv' %>


<table>
  <thead>
    <tr>
      <th>Employee name</th>
      <th>Email</th>
      <th>Leader</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Type</th>
      <th>Reason</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacations.each do |vacation| %>
      <tr>
        <td><%= vacation.employee_name %></td>
        <td><%= vacation.email %></td>
        <td><%= vacation.leader %></td>
        <td><%= vacation.start_date %></td>
        <td><%= vacation.end_date %></td>
        <td><%= vacation.type %></td>
        <td><%= vacation.reason %></td>
        <td><%= vacation.state %></td>
        <td><%= link_to 'Show', vacation %></td>
        <td><%= link_to 'Edit', edit_vacation_path(vacation) %></td>
        <td><%= link_to 'Destroy', vacation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

